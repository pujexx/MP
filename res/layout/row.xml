<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="@drawable/backthread"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

<ImageView
	android:id="@+id/objectrowicon"
	android:layout_width="100dp"
	android:layout_height="120dp"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="5dp"
    android:src="@drawable/ic_launcher"/>

<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
    <TextView
        android:id="@+id/objectrownama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:text="A"
        android:textColor="#646464"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/objectrowtipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:text="A"
        android:textColor="#646464"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
	</LinearLayout>
	<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
    <TextView
        android:id="@+id/tv1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#646464"
        android:text="Tahun   :" />
    
    <TextView
        android:id="@+id/objectrowtahun"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="#646464"
        android:text="Medium Text" />
</LinearLayout>

<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
    <TextView
        android:id="@+id/tv3"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#646464"
        android:text="Plat      :" />
    
    <TextView
        android:id="@+id/objectrownopol"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="#646464"
        android:text="Medium Text" />
</LinearLayout>

<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:layout_marginLeft="55dp"
	android:orientation="horizontal">
<TextView
        android:id="@+id/tv2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#646464"
        android:text="Rp. "
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/objectrowharga"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="#646464"
        android:text="Medium Text"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />
   </LinearLayout>
</LinearLayout>
</LinearLayout>